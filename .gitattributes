* text=auto

# Force LF for source files
*.js   text eol=lf
*.ts   text eol=lf
*.tsx  text eol=lf
*.jsx  text eol=lf
*.json text eol=lf
*.md   text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.css  text eol=lf
*.scss text eol=lf

# Keep Windows endings for Windows scripts if you have them
*.bat  text eol=crlf
*.cmd  text eol=crlf
*.ps1  text eol=crlf
